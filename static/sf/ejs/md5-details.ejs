<div id="md5-dialog" class="modal fade" tabindex='-1' xmlns="http://www.w3.org/1999/html">
    <div class="modal-dialog" style="width: 50%;">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4>
                    <icon class="fa fa-file"></icon>
                    MD5: <%= vt.md5 %>
                </h4>
            </div>
            <div class="modal-body" style="height: 800px; max-height: 700px; overflow: auto">
                <div class="container" style="width: 100%">
                    <div class="row">
                        <div class="col-sm-8">
                            <h5>
                                <label>MD5:</label> <%= vt.md5 %><br/>
                                <label>SHA1: </label> <%= vt.sha1 %><br/>
                                <label>Updated: </label> <%= vt.updated %><br/>
                                <br/>
                                This signature was detected by <%= vt.detected_count %> of <%= vt.count %> anti-virus vendors.<br/>
                            </h5>
                        </div>
                        <div class="col-lg-4">
                            <div class="pull-right">
                                <a target="_blank"
                                   title="View VirusTotal Details"
                                   href="https://www.virustotal.com/latest-scan/<%= vt.md5 %>">
                                    <img src="/static/img/vt.png" alt="VirusTotal Details"></a><br/>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 15px">
                        <div class="col-sm-12">
                            <table class="table table-condensed table-bordered">
                                <tr>
                                    <th>Antivirus</th>
                                    <th>Result</th>
                                    <th>Update</th>
                                    <th>Version</th>
                                </tr>
                                <% _.each(vt.detected, function(item) { %>
                                <tr>
                                    <td><%= item.antivirus %></td>
                                    <td>
                                        <% if (item.detected) { %>
                                            <span class="text-danger">
                                                <i class="fa fa-bug"></i> <%= item.result %>
                                            </span>
                                        <% } else { %>
                                            <span class="text-success">
                                                <i class="fa fa-check-circle"></i> File Not Detected
                                            </span>
                                        <% } %>
                                    </td>
                                    <td><%= item.update %></td>
                                    <td><%= item.version %></td>
                                </tr>
                                <% }) %>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>