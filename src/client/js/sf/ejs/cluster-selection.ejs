<!-- Cluster Selection Input Form -->

<div class="row">
  <div class="col-md-6">
    <% if (hide_services !== true) { %>
    <label>MCIRT Services</label>
    <div id="services-select-region"></div>
    <% } %>

    <label style="padding-top: 10px">Clients</label>
    <div id="clients-select-region"></div>

    <label style="padding-top: 10px">Clusters</label>
    <div id="clusters-select-region"></div>

  </div>
  <div class="col-md-6">
    <div id="searchControls"></div>
    <div style="float:right; padding-top: 25px">
      <div class="btn-group">
        <button id="submit-button"
                type="button"
                class="btn btn-primary">
          <i class="fa fa-search"></i> Submit
        </button>
      </div>
      <div class="btn-group">
        <button id="clear-button"
                type="button"
                class="btn btn-default">
          <i class="fa fa-times-circle"></i> Clear
        </button>
      </div>
    </div>
  </div>
</div>

