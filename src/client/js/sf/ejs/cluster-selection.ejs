<!-- Cluster Selection Input Form -->

<div class="row">
  <div class="col-md-6">
    <% if (hide_services !== true) { %>
    <label>MCIRT Services</label>
    <select id="services-select"
            multiple="true"
            placeholder="Select MCIRT Services">
    </select>
    <% } %>
    <label style="padding-top: 10px">Clients</label>
    <select id="clients-select"
            multiple="true"
            placeholder="Select Clients">
    </select>
    <label style="padding-top: 10px">Clusters</label>
    <select id="clusters-select"
            multiple="true"
            placeholder="Select Clusters">
    </select>

  </div>
  <div class="col-md-6">
    <div id="searchControls"></div>
    <div style="float:right; padding-top: 25px">
      <div class="btn-group">
        <button id="submit-button"
                type="button"
                class="btn btn-primary">
          <i class="fa fa-search"></i> Submit
        </button>
      </div>
      <div class="btn-group">
        <button id="clear-button"
                type="button"
                class="btn btn-default">
          <i class="fa fa-times-circle"></i> Clear
        </button>
      </div>
    </div>
  </div>
</div>

