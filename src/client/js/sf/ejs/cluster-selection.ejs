<!-- Cluster Selection Input Form -->
<% if (hide_services !== true) { %>
<div class="row">
    <div class="col-md-6">
        <label>MCIRT Services</label>
        <select id="services-select"
                multiple="true"
                placeholder="Select MCIRT Services">
        </select>
    </div>
</div>
<% } %>
<div class="row" style="margin-top: 15px">
    <div class="col-md-6">
        <label>Clients</label>
        <select id="clients-select"
                multiple="true"
                placeholder="Select Clients">
        </select>
    </div>
</div>
<div class="row" style="margin-top: 15px">
    <div class="col-md-6">
        <label>Clusters</label>
        <select id="clusters-select"
                multiple="true"
                placeholder="Select Clusters">
        </select>
    </div>
</div>
<div class="row" style="margin-top: 15px">
    <div class="col-sm-6">
        <div class="btn-group">
            <button id="submit-button"
                    type="button"
                    class="btn btn-primary">
                <i class="fa fa-search"></i> Submit
            </button>
        </div>
        <div class="btn-group">
            <button id="clear-button"
                    type="button"
                    class="btn btn-default">
                <i class="fa fa-times-circle"></i> Clear
            </button>
        </div>
    </div>
</div>